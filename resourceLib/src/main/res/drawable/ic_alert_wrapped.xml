<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	
	<item android:state_activated="false" >
		<layer-list>
			<item>
				<shape>
					<solid android:color="@color/colorPrimaryDark"/>
				</shape>
			</item>
			<item android:drawable="@drawable/ic_alert_unselected" android:gravity="center"/>
		</layer-list>
	</item>
	
	<item android:state_activated="true">
		<layer-list>
			<item>
				<shape>
					<solid android:color="@color/colorAccentMain"/>
				</shape>
			</item>
			<item android:drawable="@drawable/ic_alert_selected" android:gravity="center"/>
		</layer-list>
	</item>
	
</selector>