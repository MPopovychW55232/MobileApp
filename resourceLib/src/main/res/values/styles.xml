<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ErrorTextInputStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorNotice</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextInputStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccentMain</item>
    </style>
    
    <style name="StudyGridTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="NotificationAuthorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccentMain</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="NotificationTimeAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorDisabledFlat</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="NotificationTitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="NotificationTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
